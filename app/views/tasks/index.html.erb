<h1>My tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task) %>
      </li>
      <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    <% end %>
  </ul>
  <%= link_to "New task", tasks_new_path %>


